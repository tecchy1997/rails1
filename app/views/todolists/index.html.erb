<h1>Books</h1>
<% @lists.each do |list| %>
  <p>Title</p>
  <span><%= list.title %></span>
  <p>Body</p>
  <span><%= list.body %></span>
  <span>
    <%= link_to "Show", todolist_path(list.id) %>
    <%= link_to "Edit", edit_todolist_path(list.id) %>
    <%= link_to "Destroy", destroy_todolist_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </span>
<% end %>
<h1>New Books</h1>
<!-- form_with部分 -->
<%= form_with model: @list, url:'/todolists', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Books' %>
<% end %>