<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>


<h1>Books</h1>
<table>
  <thread>
    <tr>
      <th><p>Title</p></th>
      <th><p>Body</p></th>
      <th colspan="3"></th>
    </tr>
  </thread>
  <tbody>
    <% @books.each do |book| %>
    <tr>
    <td><span><%= book.title %></span></td>
    <td><span><%= book.body %></span></td>
    <td><%= link_to "Show", show_book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, data: { confirm: "Are you sure ?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if @book.errors.any? %>
  <h2><%= @book.errors.count%>error prohibited this book from being saved::</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<h1>New Books</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Books' %>
<% end %>